@model Assignment.Models.User_Model

@{
    string warn = ViewData["warning"] as string;
    ViewData["Title"] = "Login";
}
<h1><center>Đăng nhập</center></h1>
<center><span style="color:red">@warn</span></center>
<div class="row">
    <div class="col-md-4" style="margin:auto">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="padding:10px">
                <label asp-for="UserName" class="control-label">Tên đăng nhập</label>
                <input asp-for="UserName" class="form-control"/>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group" style="padding:10px">
                <label asp-for="Password" class="control-label">Mật khẩu</label>
                <input asp-for="Password" class="form-control" type="password"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group" style="padding:10px; float:left;">
                <input type="submit" value="Đăng nhập" class="btn btn-primary" style="background-color:black; border:none;"/>
            </div>
        </form>
        <div class="form-group" style="padding:10px; float:right;">
            @using (Html.BeginForm("Signup", "User"))
            {
                <input type="submit" value="Đăng ký" class="btn btn-primary" style="background-color:black; border:none;"/>
            }
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
